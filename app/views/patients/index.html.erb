<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Surname</th>
      <th>Dob</th>
      <th>Photo</th>
      <th>Gender</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Post code</th>
      <th>State</th>
      <th>Country</th>
      <th>Vaccinator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.surname %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.photo %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.address1 %></td>
        <td><%= patient.address2 %></td>
        <td><%= patient.post_code %></td>
        <td><%= patient.state %></td>
        <td><%= patient.country %></td>
        <td><%= patient.vaccinator %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

